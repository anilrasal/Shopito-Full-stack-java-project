# Stage 1: Build
FROM node:25-bullseye-slim AS build

WORKDIR /app

COPY package*json ./

# Accept build-time API base
# ARG VITE_API_BASE_URL
# ENV VITE_API_BASE_URL=${VITE_API_BASE_URL}

RUN npm ci

COPY . .

# Pass build arg into Vite
ARG VITE_API_BASE_URL
ENV VITE_API_BASE_URL=${VITE_API_BASE_URL}

RUN npm run build

# Stage 2: Serve with Nginx

FROM nginx:alpine

#Since I'm using Vite (vite build), the compiled assets are in /app/dist, not /app/build.
COPY --from=build /app/dist /usr/share/nginx/html 
COPY nginx.conf /etc/nginx/conf.d/default.conf 
EXPOSE 80